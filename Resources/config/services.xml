<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="avocode.form.extensions.color_picker.options" type="collection" />
    </parameters>

    <services>
        <service id="avocode.form.extensions.type.bootstrap_collection" class="Avocode\FormExtensionsBundle\Form\Type\BootstrapCollectionType" abstract="true" />

        <service id="avocode.form.extensions.type.color_picker" class="Avocode\FormExtensionsBundle\Form\Type\ColorPickerType">
            <tag name="form.type" alias="color_picker" />
            <argument>%avocode.form.extensions.color_picker.options%</argument>
        </service>

        <service id="avocode.form.extensions.type.select2" class="Avocode\FormExtensionsBundle\Form\Type\Select2Type" abstract="true" />
    </services>

</container>
