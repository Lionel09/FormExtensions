{% block form_stylesheet %}
{% spaceless %}
    {% for child in form %}
        {{ form_stylesheet(child) }}
    {% endfor %}
{% endspaceless %}
{% endblock form_stylesheet %}

{% block field_stylesheet "" %}

{% block bootstrap_collection_stylesheet %}
{% spaceless %}
{% if sortable is not null %}
    <style type="text/css">
    /* Hide sortable field */
    {{ ('#'~id~' > .collection > .collection-item > div > div.control-group.'~sortable)|raw }},
    {{ ('#'~id~' > .collection > .collection-item > td > div > div.control-group.'~sortable)|raw }}
    { visibility: hidden; position: absolute; }
    </style>
{% endif %}
{% endspaceless %}
{% endblock bootstrap_collection_stylesheet %}

{% block collection_fieldset_stylesheet %}
    {{ block('bootstrap_collection_stylesheet') }}
{% endblock collection_fieldset_stylesheet %}
    
{% block collection_table_stylesheet %}
    {{ block('bootstrap_collection_stylesheet') }}
{% endblock collection_table_stylesheet %}
    
{% block color_stylesheet %}
{% spaceless %}
{% if widget == "image" %}
    <style type="text/css" media="screen">
        #{{ id }}_color {
            background: url({{ asset('bundles/avocodeformextensions/color/img/select.png') }});
            width: 36px;
            height: 36px;
            position: relative;
            overflow: hidden;
        }

        #{{ id }}_color div {
            background: url({{ asset('bundles/avocodeformextensions/color/img/select.png') }}) center center;
            position: absolute;
            left: 3px;
            top: 3px;
            width: 30px;
            height: 30px;
        }
    </style>
{% endif %}
{% endspaceless %}
{% endblock color_stylesheet %}