{% if widget == "image" %}
<style type="text/css" media="screen">
    #{{ id }}_color {
        background: url({{ asset('bundles/avocodeformextensions/colorpicker/img/select.png') }});
        width: 36px;
        height: 36px;
        position: relative;
        overflow: hidden;
    }

    #{{ id }}_color div {
        background: url({{ asset('bundles/avocodeformextensions/colorpicker/img/select.png') }}) center center;
        position: absolute;
        left: 3px;
        top: 3px;
        width: 30px;
        height: 30px;
    }
</style>
{% endif %}